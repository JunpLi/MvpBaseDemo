<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/leke_baseresource_loading_progress_bg">

    <ImageView
        android:id="@+id/leke_baseview_progress_rotate_image"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/leke_baseresource_loading_progress"/>

    <TextView
        android:id="@+id/leke_baseview_progress_progress_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="请求网络数据中..."
        android:textSize="22dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>